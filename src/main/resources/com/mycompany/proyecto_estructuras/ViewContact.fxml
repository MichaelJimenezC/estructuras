<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>

<AnchorPane id="MainContainer"  xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.mycompany.proyecto_estructuras.CreateContactPageController">>
    <VBox fx:id="profileContainer" styleClass="profile-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox styleClass="header">
            <!-- Íconos de navegación y título aquí -->
            <Label text="7:30" />
            <!-- ... -->
        </HBox>
        <StackPane styleClass="profile-picture-container">
            <ImageView fx:id="profileImage" styleClass="profile-picture"/>
            <VBox alignment="CENTER" layoutY="50">
                <Label fx:id="profileName" text="Leon Garcia" styleClass="profile-name"/>
                <Label text="Friends" />
            </VBox>
        </StackPane>
        <VBox styleClass="menu-options">
            <Button text="Edit Profile" styleClass="menu-button">
                <graphic>
                    <ImageView>
                        <Image url="@edit-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Messages" styleClass="menu-button">
                <graphic>
                    <ImageView>
                        <Image url="@message-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <!-- Más botones -->
        </VBox>
    </VBox>
</AnchorPane>
